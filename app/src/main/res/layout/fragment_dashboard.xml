<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/new_background">
    <Button
        android:id="@+id/lockStart"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="开始锁机"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/qmui_config_color_red"/>
    <TextView
        android:id="@+id/setTimeText"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="设置时长"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/qmui_s_transparent"/>

    <Button
        android:id="@+id/oneMinute"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/setTimeText"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/fiveMinute"
        android:background="@drawable/new_button_style"
        android:text="1分钟" />

    <Button
        android:id="@+id/fiveMinute"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/new_button_style"
        android:text="5分钟" />

    <Button
        android:id="@+id/twentyfiveMinute"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/fiveMinute"
        android:background="@drawable/new_button_style"
        android:text="25分钟" />

    <Button
        android:id="@+id/thirtyMinute"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/oneMinute"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/oneHour"
        android:background="@drawable/new_button_style"
        android:text="30分钟" />

    <Button
        android:id="@+id/oneHour"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/oneMinute"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/new_button_style"
        android:text="60分钟" />
    <Button
        android:id="@+id/twoHour"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/oneMinute"
        android:layout_toRightOf="@id/oneHour"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="120分钟"
        android:background="@drawable/new_button_style"/>

    <TextView
        android:id="@+id/todayLockTime"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_above="@+id/lockStart"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="230dp"
        android:text="今日自习 共0小时0分钟"
        android:textColor="#000033"
        android:textSize="20dp" />

    <Switch
        android:id="@+id/force_pattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lockStart"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:switchMinWidth="55dp"
        android:text="强制模式"

        android:textColor="@color/qmui_config_color_red"
        android:textSize="20dp" />


</RelativeLayout>


